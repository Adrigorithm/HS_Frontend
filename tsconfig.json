{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "strict": true,
        "outDir": "./src/assets/js",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,
    },
    "include": [
        "./src/assets/ts/*.ts",
        "./src/assets/ts/*/*.ts"
    ]
}
